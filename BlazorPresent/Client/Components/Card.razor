<div class="card mb-3">
    <div class="card-header">
        <h3 class="card-title mb-0">
            @Title
        </h3>
    </div>
    <div class="card-body">
        @ChildContent
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }
}
