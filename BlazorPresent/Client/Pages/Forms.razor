@page "/forms"
@using BlazorPresent.Client.Models

<PageTitle>Forms</PageTitle>

<h1>Forms</h1>

<Card Title="Form with validation">
    <EditForm Model="@model" OnValidSubmit="@HandleValidFormSubmission" class="d-inline-block w-auto">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-2">
            <label>Email</label>
            <InputText class="form-control" @bind-Value="@model.Email" />
            <ValidationMessage For="() => model.Email"/>
        </div>
    
        <div class="mb-2">
            <label>Password</label>
            <InputText type="password" class="form-control" @bind-Value="@model.Password" />
            <ValidationMessage For="() => model.Password" />
        </div>
    

        <button type="submit" class="mt-3 btn btn-primary">Login</button>
    </EditForm>
</Card>

@code {
    private LoginFormModel model = new ();

    private void HandleValidFormSubmission()
    {
        Console.WriteLine("Form has been submitted with valid data");
    }
}
